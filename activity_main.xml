<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.altanyesilkurtgmail.myapplication.MainActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UselessParent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_weight="0.25"
            android:src="@drawable/c"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="220dp"
            android:layout_height="250dp"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.43"
            tools:ignore="ContentDescription,RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal">

        <Button

            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="0dp"
            android:gravity="center"
            android:text="r.right"
            tools:ignore="ButtonStyle,HardcodedText,UnusedAttribute" />

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Resize"
            tools:ignore="ButtonStyle,HardcodedText,InefficientWeight" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Crop"
            tools:ignore="ButtonStyle,HardcodedText,InefficientWeight" />
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="R.Left"
            tools:ignore="ButtonStyle,HardcodedText,InefficientWeight"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"

        android:weightSum="1">

        <Button
            android:id="@+id/button17"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Gauss"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/button18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Medyan"
            tools:ignore="ButtonStyle,HardcodedText"
            android:layout_weight="0.14" />

        <Button
            android:id="@+id/button19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.11"
            android:gravity="center"
            android:text="Average"
            tools:ignore="ButtonStyle,HardcodedText,InefficientWeight" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal"
        tools:ignore="UselessLeaf"
        android:weightSum="1">

        <Button
            android:id="@+id/button24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Canny"
            tools:ignore="ButtonStyle,HardcodedText"
            android:layout_weight="0.12" />

        <Button
            android:id="@+id/button25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Sobel"
            tools:ignore="ButtonStyle,HardcodedText"
            android:layout_weight="0.15" />

        <Button
            android:id="@+id/button26"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_weight="0.00"
            android:text="laplacian"
            tools:ignore="ButtonStyle,HardcodedText,InefficientWeight" />
    </LinearLayout>
</LinearLayout>

</RelativeLayout>
